{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "packages/**/*",
  ],
  "paths": {
    "@tokamakjs/core": ["packages/core/src/**/*"]
  }
}
