{
  "name": "tokamak",
  "description": "A semi-opinionated modern framework to build React applications using the latest tools in the React ecosystem.",
  "private": true,
  "license": "MIT",
  "author": "Lars <lars.bs@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokamakjs/tokamak"
  },
  "scripts": {
    "example:real-world": "lerna run --scope @tokamakjs/real-world-example start",
    "start:cli": "ts-node packages/cli/bin/cli.ts",
    "clean": "rimraf packages/*/lib",
    "build": "NODE_ENV=production lerna run build --scope @tokamakjs/*",
    "build:watch": "NODE_ENV=development tsc -b && NODE_ENV=development lerna run --parallel build:watch",
    "publish": "npm run test && npm run build && lerna publish",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "lint": "eslint -f node_modules/eslint-formatter-pretty --ext js,jsx,ts,tsx packages/",
    "test:watch": "NODE_ENV=development jest --watch",
    "test": "jest -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --format node_modules/eslint-formatter-pretty --max-warnings=0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime-corejs3": "^7.12.1",
    "@types/classnames": "^2.2.10",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/friendly-errors-webpack-plugin": "^0.1.2",
    "@types/fs-extra": "^9.0.1",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.157",
    "@types/react": "^16.9.36",
    "@types/react-dev-utils": "^9.0.4",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.2",
    "@types/url-join": "^4.0.0",
    "@types/uuid": "^8.0.0",
    "@types/webpack": "^4.41.17",
    "@types/webpack-dev-server": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-jest": "^26.0.1",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "eslint": "^7.2.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-react": "^7.20.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "import-sort-style-local": "^1.0.0",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.10",
    "merge-stream": "^2.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "0.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {}
}
