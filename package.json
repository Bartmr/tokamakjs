{
  "name": "tokamak",
  "version": "0.0.1",
  "description": "A semi-opinionated modern framework to build React applications using the latest tools in the React ecosystem.",
  "private": true,
  "license": "MIT",
  "author": "Lars <lars.bs@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tokamakjs/tokamakjs.git"
  },
  "scripts": {
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --format node_modules/eslint-formatter-pretty --max-warnings=0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/url-join": "^4.0.0",
    "babel-jest": "^26.0.1",
    "core-js": "^3.6.5",
    "import-sort-style-local": "^1.0.0",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "0.0.4",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.1.0"
  }
}
